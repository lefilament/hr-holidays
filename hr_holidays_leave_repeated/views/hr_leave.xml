<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hr_leave_repeated_view_form" model="ir.ui.view">
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form" />
        <field name="arch" type="xml">
	    <label for="number_of_days_display" position="before">
	        <field name="holiday_type_repeat" invisible="1" />
	        <field
                    name="repeat_every"
                    attrs="{'invisible':['|', ('holiday_type', '!=', 'employee'), ('holiday_type_repeat','!=',True)], 'readonly': [('id', '!=', False)]}"
                />
	        <field
                    name="repeat_mode"
                    attrs="{'invisible':['|', '|', ('holiday_type', '!=', 'employee'), ('holiday_type_repeat','!=',True), ('repeat_every', '=', False)], 'readonly': [('id', '!=', False)]}"
                />
	        <field
                    name="repeat_end_date"
                    attrs="{'invisible':['|', '|', '|', ('holiday_type', '!=', 'employee'), ('repeat_mode','=','times'), ('holiday_type_repeat','!=',True), ('repeat_every', '=', False)], 'readonly': [('id', '!=', False)]}"
                />
	        <field
                    name="repeat_limit"
                    attrs="{'invisible':['|', '|', '|', ('holiday_type', '!=', 'employee'), ('repeat_mode','=','date'), ('holiday_type_repeat','!=',True), ('repeat_every', '=', False)], 'readonly': [('id', '!=', False)]}"
                />
            </label>
        </field>
    </record>

</odoo>
