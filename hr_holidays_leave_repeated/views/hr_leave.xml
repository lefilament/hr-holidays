<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hr_leave_repeated_view_form" model="ir.ui.view">
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form" />
        <field name="arch" type="xml">
	    <label for="number_of_days_display" position="before">
	        <field name="holiday_type_repeat" invisible="1" />
	        <field
                    name="repeat_every"
                    invisible="holiday_type != 'employee' or not holiday_type_repeat"
                    readonly="id != False"
                />
	        <field
                    name="repeat_mode"
                    invisible="holiday_type != 'employee' or not holiday_type_repeat or not repeat_every"
                    readonly="id != False"
                />
	        <field
                    name="repeat_end_date"
                    invisible="holiday_type != 'employee' or not holiday_type_repeat or not repeat_every or repeat_mode == 'times'"
                    readonly="id != False"
                />
	        <field
                    name="repeat_limit"
                    invisible="holiday_type != 'employee' or not holiday_type_repeat or not repeat_every or repeat_mode == 'date'"
                    readonly="id != False"
                />
            </label>
        </field>
    </record>

</odoo>
